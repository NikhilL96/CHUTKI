<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/base_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:openDrawer="end">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/hamburger_icon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_baseline_menu_24"
            android:tint="@color/blue_200"
            android:layout_margin="@dimen/normal_margin"
            android:background="?selectableItemBackgroundBorderless"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/categories_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue_500"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/drawer_layout_profile"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_baseline_person_24"
                android:layout_margin="@dimen/wide_margin"
                android:background="@drawable/solid_circle"
                android:padding="@dimen/normal_margin"
                android:backgroundTint="@color/blue_200"/>

            <TextView
                android:id="@+id/drawer_layout_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size"
                tools:text = "Welcome, \nnikhil@gmail.com"
                android:layout_marginStart="@dimen/wide_margin"
                android:layout_below="@id/drawer_layout_profile"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/normal_margin"
                android:layout_alignParentBottom="true"
                android:text="@string/logout"
                android:layout_margin="@dimen/normal_margin"
                android:backgroundTint="@android:color/holo_red_light"
                />
        </RelativeLayout>


    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>