<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/video_selection_rectangle"
    android:layout_margin="@dimen/wide_margin">

    <ImageView
        android:id="@+id/video_thumbnail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="4dp"
        />

    <androidx.core.widget.ContentLoadingProgressBar
        android:id="@+id/video_thumbnail_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/video_thumbnail_image"
        app:layout_constraintBottom_toBottomOf="@id/video_thumbnail_image"
        app:layout_constraintStart_toStartOf="@id/video_thumbnail_image"
        app:layout_constraintEnd_toEndOf="@id/video_thumbnail_image"
        style="?android:attr/progressBarStyleSmall"
        />

</androidx.constraintlayout.widget.ConstraintLayout>